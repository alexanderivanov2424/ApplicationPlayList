{
	"manifest_version": 2,

	"name": "Application Playlist",
	"description": "Quick and easy way to manage and grind through your applications",
	"default_icon": "icon.png",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"options_ui": {
		"page": "options.html"
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["autofill.js"],
			"all_frames": true
		}
	],

	"permissions": [
		"activeTab",
		"tabs",
		"storage",
		"notifications",
		"<all_urls>"
	]
}
